<div class="form-group">
    <label for="title"> Title </label>
    <input class="form-control" type="text" value="<%= article.title %>" name="title" id=title required></input>
    
</div>
<div class="form-group">
    <label for="description"> Description </label>
    <textarea class="form-control" type="text"  name="description" id="description"><%= article.description %></textarea>
    
</div>
<div class="form-group mb-2">
    <label for="markdown"> Markdown </label>
    <textarea class="form-control" type="text" name="markdown" id="markdown" required><%= article.markdown %></textarea>
    
</div>
